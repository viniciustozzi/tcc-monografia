% alterando a capa
\renewcommand{\imprimircapa}{%
  \begin{capa}%
    \center
    
    %logo Facens
    \begin{figure}
    	\centering
    	\includegraphics[height=2cm]{facensLogo}
  	\end{figure}
  	
  	%Coordenadoria de ... fonte 16 - feita uma pequena gambiarra pois por padrão este tamanho não é disponivel
  	{\fontsize{16}{20}\MakeUppercase\ABNTEXchapterfont\textbf{COORDENADORIA DE ENGENHARIA DE COMPUTAÇÃO}}

    %espaço
    \vfill

	%impressão dos autores em negrito e caixa alta
    {\large\MakeUppercase\imprimirautor}
	
	%espaço
    \vfill
    
    %titulo do trabalho
    \center\ABNTEXchapterfont\bfseries\large\MakeUppercase\imprimirtitulo

	%espaço
    \vfill

	%impressão do local
    \large\imprimirlocal

	%impressão da data
    \large\imprimirdata
    
  \end{capa}
}


